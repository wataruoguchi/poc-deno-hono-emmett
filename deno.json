{
  "imports": {
    "@event-driven-io/emmett": "npm:@event-driven-io/emmett@^0.36.0",
    "@event-driven-io/emmett-postgresql": "npm:@event-driven-io/emmett-postgresql@^0.36.0",
    "@std/assert": "jsr:@std/assert@^1.0.12",
    "@std/expect": "jsr:@std/expect@^1.0.14",
    "@std/testing": "jsr:@std/testing@^1.0.10",
    "hono": "jsr:@hono/hono@^4.7.5"
  },
  "tasks": {
    "start": "deno run --allow-read --allow-net --allow-write --watch main.ts",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120
    }
  }
}
